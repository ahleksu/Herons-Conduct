<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F8F8"
    tools:context=".HomeFragment_stu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/discRecord_stud"
            android:layout_width="340dp"
            android:layout_height="178dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="190dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Disciplinary Record"
                android:textAlignment="center"
                android:textColor="#243A69"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="68dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/dis_stu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/file_dock"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <!-- END OF DISCIPLINARY RECORD-->

        <androidx.cardview.widget.CardView
            android:id="@+id/accountabilitis_stu"
            android:layout_width="340dp"
            android:layout_height="178dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="420dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:text="Accountabilities"
                android:textAlignment="center"
                android:textColor="#243A69"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="68dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/accou_stu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/accountabilities"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="341dp"
            android:layout_height="40.12dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/herons_header">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>