<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_sma"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0F8F8">



    <TextView
        android:id="@+id/succesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="#243A69"
        android:layout_marginTop="170dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:text="Your identity has been verified! \n Set your new password."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#243A69">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="300dp"
        android:src="@drawable/password_updated">
    </ImageView>


    <Button
        android:id="@+id/go2_login"
        style="@style/Button1"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="30dp"
        android:text="Sign in" />


</RelativeLayout>