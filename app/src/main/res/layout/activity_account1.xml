<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8F8"
    tools:context=".Account1">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav"
        android:layout_alignParentBottom="true"
        android:layout_height="70dp"
        android:background="@drawable/transparent_background"
        app:itemTextColor="@drawable/acc1_selector"
        app:itemIconTint="@drawable/acc1_selector"
        app:menu="@menu/bootom_nav_menu">
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <ImageView
        android:layout_width="341dp"
        android:layout_height="40.12dp"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/herons_header">
    </ImageView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="221dp"
            android:layout_height="178dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="145dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="209dp"
                android:layout_height="57dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:text="Disciplinary\nRecord"
                android:textAlignment="center"
                android:textColor="#243A69"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="68dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/dis_stu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/a1_file"
                    tools:ignore="RtlHardcoded" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>



