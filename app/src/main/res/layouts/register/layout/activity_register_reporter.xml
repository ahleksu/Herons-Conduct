<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register_Parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="784dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/x_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:minWidth="28dp"
                android:minHeight="28dp"
                android:onClick="x_back2"
                app:srcCompat="@drawable/x_circle">

            </ImageView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/reporter_reg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:text="Creating account as a reporter"
                android:textColor="@color/Text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fNameRep"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="First Name"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:inputType="textPersonName"
                android:lines="1"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mNameRep"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Middle Name"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lNameRep"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/umakEmailReporter"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"                    android:drawablePadding="12dp"
                android:hint="UMak Email"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idNumber_Reporter"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="ID Number"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reporter_Email"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Personal Email"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/parent_ID"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Reporter ID"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reporter_Password"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Password"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reporter_ConfirmPassword"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_outline"
                android:drawablePadding="12dp"
                android:hint="Confirm Password"
                android:inputType="textPersonName"
                android:lines="1"
                android:fontFamily="@font/metropolis_light"
                android:textSize="12sp"
                android:minWidth="320dp"
                android:minHeight="50dp"
                android:textColorHint="@color/Text" />

            <Button
                android:id="@+id/Register_REPORTER"
                style="@style/Button1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Register"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <Button
                android:id="@+id/login_haveAcc_reporter"
                style="@style/TextyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="@font/metropolis_semi_bold"
                android:padding="20dp"
                android:textSize="12sp"
                android:text="Already have an account?\n Sign in"
                android:textColor="#243A69" />


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />



        </LinearLayout>
    </RelativeLayout>

</ScrollView>