<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register_Parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="784dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/x_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:minWidth="28dp"
                android:minHeight="28dp"
                android:onClick="x_back1"
                app:srcCompat="@drawable/x_circle">

            </ImageView>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_2"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/imageViewRounded"
                app:strokeColor="@android:color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:text="Creating account as a parent"
                android:textColor="@color/Text"
                android:textSize="16sp"
                android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fNamePAR"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="First Name"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mNamePAR"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Middle Name"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lNamePAR"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressParent"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"                    android:drawablePadding="12dp"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactParent"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Contact"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/studentId_Parent"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Student ID"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_ID"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Parent ID"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_Email"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_Password"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Password"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />



                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_ConfirmPassword"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/reg_outline"
                    android:drawablePadding="12dp"
                    android:hint="Confirm Password"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:fontFamily="@font/metropolis_light"
                    android:textSize="12sp"
                    android:minWidth="320dp"
                    android:minHeight="50dp"
                    android:textColorHint="@color/Text" />

            <Button
                android:id="@+id/Register_Parent"
                style="@style/Button1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Register"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal" />


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/login_haveAcc_parent"
                style="@style/TextyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="@font/metropolis_semi_bold"
                android:padding="20dp"
                android:textSize="12sp"
                android:text="Already have an account?\n Sign in"
                android:textColor="#243A69" />





        </LinearLayout>



    </RelativeLayout>

</ScrollView>