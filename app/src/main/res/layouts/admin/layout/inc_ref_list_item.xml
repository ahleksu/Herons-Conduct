<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/not_wearingid"
                android:layout_gravity="center"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/titleOfRef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referral Title"
                    android:fontFamily="@font/metropolis_black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/ref_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="REF ID NUMBER"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/offender_college"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="College"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reporter:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/reporter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offender:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/offender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/refLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_thin_italic"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/refTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/metropolis_thin_italic"
                    android:layout_gravity="end|bottom"
                    />





            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>