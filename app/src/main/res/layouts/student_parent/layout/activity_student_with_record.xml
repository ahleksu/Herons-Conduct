<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".student_parent.StudentWithRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/rectangle_goodmoral"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:onClick="back_Disciplinary"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:background="@drawable/leave_goodmoral_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:text="Disciplinary Record"
            android:textColor="#F0F8F8"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/discRecordStudent"
        android:layout_width="345dp"
        android:layout_height="290dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/disc2"/>


            <TextView
                android:id="@+id/accountabilityDISC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accountabilities:\n 0"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/violationDISC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violations: 0"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/discRecord_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonia Vega"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="24sp"
                android:fontFamily="@font/metropolis_black"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLLEGE: CCIS"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UMak Email: svega.a12035738@umak.edu.ph"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID: a12035738"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: 016, Saint Catherine Street, Comembo Makati City"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthdate: 03/14/2002"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 09195554145"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_light"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="400dp"
        android:background="#D7D9E4" />

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/disc3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/metropolis_black"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Not wearing ID" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="150dp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/black"
            android:text="ID:" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/black"
            android:text="College: CCIS" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/black"
            android:text="Status: RESOLVED" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="110dp"
            android:textSize="9sp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="HPSB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="125dp"
            android:textSize="9sp"
            android:fontFamily="@font/metropolis_light"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="8:00 AM" />


    </androidx.cardview.widget.CardView>



</RelativeLayout>