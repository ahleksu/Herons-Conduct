<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/not_wearingid"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/titleOfAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accountability"
                    android:fontFamily="@font/metropolis_black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/accID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="ACC ID NUMBER"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/accCollege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="College"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                    <TextView
                        android:id="@+id/accStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:fontFamily="@font/metropolis_regular"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/accLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_thin_italic"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/accTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/metropolis_thin_italic"
                    android:layout_gravity="end|bottom"
                    />





            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>